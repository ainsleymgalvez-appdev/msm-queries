<h1>
  Actor #<%=@the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%=@the_actor.id %>" class="btn btn-block btn-outline-secondary">
  Delete actor
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="https://robohash.org/<%= @the_actor.id %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">

<% @roles.each do |character| %>
    <tr>
      <td>
        <% d = Movie.where({ :id => character.movie_id }).at(0) %>
        <%= d.title%>

      </td>

      <td>
        <%= d.year %>
      </td>

      <td>
          <% a = Movie.where({:id => character.movie_id }).at(0) %>
          <% director_name = Director.where({:id => a.director_id}).at(0) %>
          <%= director_name.name %>
      </td>

      <td>
        <%= character.name %>
      </td>

      <td>
        <a href="/movies/<%= %>">
          Show details
        </a>
      </td>
    </tr>
    <% end %>
</table>
